{
  "name": "TofC_Formatter",
  "version": "1.0.0",
  "description": "Quick formatting of OCR text",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "electron:package:win": "electron-builder build --win"
  },
  "build": {
    "appId": "none",
    "productName": "TofC_Formatter",
    "win": {
      "target": [
        "nsis",
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": true
    }
  },
  "devDependencies": {
    "electron": "^latest-version",
    "electron-builder": "^latest-version"
  }
}
