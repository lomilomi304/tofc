{
  "name": "TofC_Formatter",
  "version": "1.0.0",
  "description": "Quick formatting of OCR text",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "none",
    "productName": "TofC_Formatter",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": true
    }
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  }
}